FROM centos:6.8
MAINTAINER Roman <sometime.developer@gmail.com>

ADD sipxecs.repo /etc/yum.repos.d/
RUN yum install -y initscripts

RUN yum install -y sipxtacklib sipxportlib unixODBC zeromq oss_core mongo-cxx-driver postgresql-odbc yum-utils
RUN cd /var/tmp
RUN yumdownloader sipxproxy sipxcommserverlib
RUN rpm -i --nodeps ./*.rpm

CMD /usr/bin/sipXproxy --config /etc/sipxpbx/sipXproxy-config
